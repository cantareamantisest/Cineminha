@model Cineminha.Apresentacao.Mvc.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
    var returnUrl = @Context.Request.Query["returnurl"];
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="pragma" content="no-cache" />
    <title>@ViewData["Title"] - Cineminha</title>
    <link href="~/images/icons8-pipoca-32.png" rel="shortcut icon" type="image/x-icon" />
    <!-- Bootstrap core CSS -->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/css/signin.css" rel="stylesheet" />

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }
    </style>
</head>
<body class="text-center">
    <form asp-controller="Authentication" asp-action="LoginExecute" method="post" asp-route-returnUrl="@returnUrl" asp-antiforgery="true" role="form" class="form-signin">
        <img class="mb-4" src="~/images/icons8-documentário-94.png" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Acesso ao sistema</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Login" type="text" id="inputLogin" class="form-control" placeholder="Login" required autofocus />
        <input asp-for="Senha" type="password" id="inputPassword" class="form-control" placeholder="Senha" required />
        <button class="btn btn-lg btn-primary btn-block" type="submit">Acessar</button>
        <p class="mt-5 mb-3 text-muted">&copy; Cineminha - @DateTime.Now.Year.ToString()</p>
    </form>
</body>
</html>